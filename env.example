# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Agent Configuration
LOG_LEVEL=INFO
EVOLUTION_THRESHOLD=0.6
PERFORMANCE_WINDOW=10

# Gemma3-4B Configuration (Choose ONE option)

# OPTION 1: Local Ollama (Recommended - No API Key Needed)
GEMMA_MODEL=gemma2:9b
# Alternative models: gemma2:2b, gemma2:27b, gemma:7b

# OPTION 2: Google AI Studio (Requires API Key)
# GEMMA_MODEL=gemini-pro
# GOOGLE_API_KEY=your_google_ai_studio_api_key_here

# OPTION 3: Hugging Face (Requires API Key for hosted inference)
# GEMMA_MODEL=google/gemma-2-9b-it
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# OPTION 4: OpenAI Compatible (if using other providers)
# GEMMA_MODEL=gemma-9b
# OPENAI_API_KEY=your_api_key_here
# OPENAI_BASE_URL=https://your-provider-url.com/v1

# Text-to-Cypher Configuration
CYPHER_CONFIDENCE_THRESHOLD=0.6
CYPHER_MAX_TOKENS=2048
CYPHER_TEMPERATURE=0.2

# Optional: Enhanced Evolution with LLM
# EVOLUTION_LLM_ENABLED=true
# EVOLUTION_LLM_MODEL=gemma2:9b
